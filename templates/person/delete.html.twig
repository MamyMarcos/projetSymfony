<form action="{{ path('deletePersonne', {id: person.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this person?')">
    <input type="hidden" name="_method" value="DELETE"/>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}"/>
    <input type="hidden" name="id" value="{{ person.id }}"/> <!-- Ajout de l'argument $id -->
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
